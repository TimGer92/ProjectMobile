<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- De gegevens van de leden onder elkaar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        <ImageView-->
        <!--            android:id="@+id/ivProfilePicture"-->
        <!--            android:layout_width="100dp"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:layout_marginEnd="20dp"-->
        <!--            android:layout_marginStart="20dp"-->
        <!--            android:layout_marginBottom="20dp"-->
        <!--            android:layout_marginTop="20dp"/>-->

        <TextView
            android:id="@+id/detail_firstname_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/detail_firstname"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstname_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/dummyData"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_lastname_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/detail_lastname"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastname_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/dummyData"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_birthdate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/detail_birthdate"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/birthdate_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/dummyData"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/detail_address"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/dummyData"
            android:textSize="20sp" />

        <!-- De knoppen -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="17dp"
                android:text="@string/button_update"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                android:text="@string/button_delete"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>